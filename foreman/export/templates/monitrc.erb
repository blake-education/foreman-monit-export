<% engine.procfile.entries.each do |process| -%>
<% 1.upto(concurrency[process.name]) do |num| -%>
<% port = engine.port_for(process, num, self.port) -%>
check process <%= app %>-<%= process.name %>-<%= num %> with pidfile <%= pid_file_for(process, num) %>
  depends on <%= File.basename(check_file_for(process)) %>
  group <%= app %>-<%= process.name %>
  start program "sh -c 'PORT=<%= port %> PID_FILE=<%= pid_file_for(process, name) %> LOG_FILE=<%= log_file_for(process, name) %> <%= wrapper_path_for(process) %> start'" as uid <%= user %>
  stop program "sh -c 'PID_FILE=<%= pid_file_for(process, name) %> <%= wrapper_path_for(process) %> stop'" as uid <%= user %>
<% end -%>

check file <%= File.basename(check_file_for(process)) %> with path <%= check_file_for(process) %>
  if changed timestamp then restart
<% end -%>
